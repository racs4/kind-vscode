{
  "name": "formality-vscode",
  "description": "A Formality language server and client for Visual Studio Code",
  "author": "Simon Horlick",
  "license": "MIT",
  "version": "0.1.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/simonhorlick/formality-vscode"
  },
  "publisher": "simonhorlick",
  "categories": [
    "Programming Languages"
  ],
  "keywords": [
    "multi-root ready"
  ],
  "engines": {
    "vscode": "^1.43.0"
  },
  "activationEvents": [
    "onLanguage:fm",
    "workspaceContains:**/*.fm"
  ],
  "languages": [
    {
      "id": "fm",
      "aliases": [
        "Formality",
        "fm"
      ],
      "extensions": [
        ".fm"
      ]
    }
  ],
  "main": "./client/out/extension",
  "contributes": {
    "languages": [
      {
        "id": "fm",
        "aliases": [
          "Formality",
          "fm"
        ],
        "extensions": [
          ".fm"
        ]
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -b",
    "watch": "tsc -b -w",
    "postinstall": "cd client && npm install && cd ../server && npm install && cd ..",
    "test": "sh ./scripts/e2e.sh"
  },
  "devDependencies": {
    "@types/mocha": "^8.0.3",
    "mocha": "^8.1.1",
    "@types/node": "^12.12.0",
    "eslint": "^6.4.0",
    "@typescript-eslint/parser": "^2.3.0",
    "typescript": "^4.0.2"
  }
}
